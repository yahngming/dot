#!/bin/sh

menu="\
󰕮 System\n\
  ----\n\
 Battery\n\
󰌌 Binds\n\
 CPU\n\
 Drive\n\
󰢮 GPU\n\
 Memory\n\
 PCI\n\
󱉶 Sensors\n\
󰺗 Time\n\
 USB\n\
"

case $(printf "$menu" | menu "$@") in
	*Battery* ) opt="battery" ;;
	*Binds*   ) opt="binds" ;;
	*CPU*     ) opt="cpu" ;;
	*Drive*   ) opt="drive" ;;
	*GPU*     ) opt="gpu" ;;
	*Memory*  ) opt="memory" ;;
	*PCI*     ) opt="pci" ;;
	*Sensors* ) opt="sensors" ;;
	*System*  ) opt="system" ;;
	*Time*    ) opt="time" ;;
	*USB*     ) opt="usb" ;;
esac

pkill -f "read -n 1 -s"

case "$opt" in
	binds ) about $opt ;;
	*     ) tui "about $opt; read -n 1 -s"
esac
