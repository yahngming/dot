#!/bin/sh

pkill $LAUNCHER && exit

menu="\
󰕮 System\n\
  ----\n\
󰄌 Battery\n\
 CPU\n\
 Drive\n\
󰢮 GPU\n\
 Memory\n\
 PCI\n\
󱉶 Sensors\n\
 Time\n\
󱇰 USB\n\
"

case $(printf "$menu" | menu "$@") in
	*Battery* ) item="battery" ;;
	*CPU*     ) item="cpu" ;;
	*Drive*   ) item="drive" ;;
	*GPU*     ) item="gpu" ;;
	*Memory*  ) item="memory" ;;
	*PCI*     ) item="pci" ;;
	*Sensors* ) item="sensors" ;;
	*System*  ) item="system" ;;
	*Time*    ) item="time" ;;
	*USB*     ) item="usb" ;;
esac

case "$item" in
	"" ) exit ;;
	*  ) pkill -f "read -n 1 -s"; tui "about $item; read -n 1 -s" ;;
esac
