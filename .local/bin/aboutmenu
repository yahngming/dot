#!/bin/sh

pkill $LAUNCHER && exit

menu="\
󰕮 System\n\
  ----\n\
󰄌 Battery\n\
 CPU\n\
 Drive\n\
󰢮 GPU\n\
 Memory\n\
 PCI\n\
󱉶 Sensors\n\
 Time\n\
󱇰 USB\n\
"

case $(printf "$menu" | menu "$@") in
	*Battery* ) opt="battery" ;;
	*CPU*     ) opt="cpu" ;;
	*Drive*   ) opt="drive" ;;
	*GPU*     ) opt="gpu" ;;
	*Memory*  ) opt="memory" ;;
	*PCI*     ) opt="pci" ;;
	*Sensors* ) opt="sensors" ;;
	*System*  ) opt="system" ;;
	*Time*    ) opt="time" ;;
	*USB*     ) opt="usb" ;;
esac

case "$opt" in
	"" ) exit ;;
	*  ) pkill -f "read -n 1 -s"; tui "about $opt; read -n 1 -s" ;;
esac
