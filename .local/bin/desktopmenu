#!/bin/sh

menu="\
dwm\n\
hyprland\n\
niri\n\
xfce\n\
"

case $(printf "$menu" | menu "$@") in
	dwm      ) echo "startx ~/.config/xorg/xinitrc dwm" > ~/.config/desktop ;;
	hyprland ) echo "exec Hyprland" > ~/.config/desktop ;;
	niri     ) echo "exec niri-session" > ~/.config/desktop ;;
	xfce     ) echo "startx ~/.config/xorg/xinitrc xfce" > ~/.config/desktop ;;
esac
