#!/bin/sh

case "$@" in
	*about*|*bat*|dot|*proxy*|*rclone*|*timezone*|up ) class="center" ;;
	*telnet*                                         ) class="fullscreen" ;;
	*asciiquarium*|*lavat*|*matrix*|*pipes*|*svr*    ) class="screensaver" ;;
esac

if [ -n "$WAYLAND_DISPLAY" ]; then
	TERMINAL="foot -a $class"
elif [ -n "$DISPLAY" ]; then
	TERMINAL="st -c $class"
fi

$TERMINAL -T $(echo "$@" | cut -d ' ' -f 1) -e $SHELL -c "cat ~/.cache/wal/sequences; $@"
