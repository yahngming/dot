#!/bin/sh

case "$@" in
	*about*|dot|tzselect|up)
		class="center"
		if [ "$TERMINAL" = "foot" ]; then
			opt="-a $class"
		else
			opt="-c $class"
		fi
		$TERMINAL $opt -e $SHELL -c "cat ~/.cache/wal/sequences; $@"
		;;
	*asciiquarium*|*matrix*|*lavat*|*telnet*|ttesvr|ttysvr)
		class="fullscreen"
		st -F -c $class -e $SHELL -c "$@" &
		;;
esac
exit 0
