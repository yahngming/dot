#!/bin/sh

case "$@" in
	*about*|*bat*|dot|picker|*proxy*|*rclone*|*timezone*|up ) class="center" ;;
	*telnet*                                                ) class="fullscreen" ;;
	*asciiquarium*|*lavat*|*matrix*|*svr*                   ) class="screensaver" ;;
esac

case "$TERMINAL" in
	*st*                                                    ) class="-c $class" ;;
	*xfce*                                                  ) class="--class=$class" ;;
	*                                                       ) class="-a $class" ;;
esac

$TERMINAL -T $1 $class -e $SHELL -c "cat ~/.cache/wal/sequences; $@"
