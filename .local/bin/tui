#!/bin/sh

case "$@" in
	*about*|dot|tzselect|up)
		class="center"
		;;
	*asciiquarium*|*matrix*|*lavat*|*telnet*|ttesvr|ttysvr)
		TERMINAL="st -F"
		class="fullscreen"
		;;
esac

case "$class" in
	fullscreen ) cmd="$@" ;;
	*          ) cmd="cat ~/.cache/wal/sequences; $@" ;;
esac

case "$TERMINAL" in
	foot ) opt="-a $class" ;;
	*    ) opt="-c $class" ;;
esac

$TERMINAL $opt -e $SHELL -c "$cmd"
