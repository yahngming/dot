#!/bin/sh

case "$@" in
	*about*|dot|tzselect|up                              ) class="center" ;;
	*asciiquarium*|*matrix*|*lavat*|telnet|ttesvr|ttysvr ) class="fullscreen" ;;
esac

if [ "$class" == "center" ]; then
	case "$TERMINAL" in
		*foot* ) TERMINAL="foot -a $class" ;;
		*      ) TERMINAL="st -c $class" ;;
	esac
elif [ "$class" == "fullscreen" ]; then
	case "$TERMINAL" in
		*      ) TERMINAL="st -F -c $class" ;;
	esac
fi

$TERMINAL -e $SHELL -c "cat ~/.cache/wal/sequences ; $@"
