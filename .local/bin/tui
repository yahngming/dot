#!/bin/sh

case "$@" in
	dot|up ) class="center" ;;
	ttesvr ) class="fullscreen" ;;
esac
if [ ! -z "$class" ]; then
	case "$TERMINAL" in
		*foot* ) opt="-a $class" ;;
		*st*   ) opt="-c $class" ;;
		*xfce* ) opt="--class $class" ;;
	esac
fi

$TERMINAL $opt -e $SHELL -c "cat ~/.cache/wal/sequences ; $@"
