#!/bin/sh

case "$TERMINAL" in
	foot ) opt="-a" ;;
	st   ) opt="-c" ;;
esac

case "$@" in
	about*|bluetui|dockers*|dot|impala|proxy*|rclone*|timezone*|up|wiremix ) class="center" ;;
	telnet*                                                                ) class="fullscreen" ;;
	asciiquarium*|lavat*|*matrix*|*pipes*|*svr                             ) class="screensaver" ;;
	*                                                                      ) class="tui" ;;
esac

$TERMINAL $opt $class -T $(echo "$@" | cut -d ' ' -f 1) -e $SHELL -c "cat ~/.cache/wal/sequences; $@"
