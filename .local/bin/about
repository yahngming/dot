#!/bin/sh

help() {
	echo "Usage: about [battery|cpu|drive|gpu|memory|pci|system|time|usb]"
}

case "$@" in
	battery ) upower -i $(upower -e | grep BAT) | bat -pPl cpuinfo ;;
	cpu     ) lscpu | bat -pPl cpuinfo ;;
	drive   ) lsblk | bat -pPl conf ;;
	gpu     ) lsgpu | bat -pPl cpuinfo ;;
	memory  ) free -h | bat -pPl cpuinfo ;;
	pci     ) lspci | bat -pPl cpuinfo ;;
	system  ) fastfetch ;;
	time    ) timedatectl ;;
	usb     ) lsusb | bat -pPl conf ;;
	*       ) help ;;
esac
