#!/bin/sh

help() {
	echo "Usage: about [battery|cpu|drive|gpu|memory|pci|system|time|usb]"
}

case "$@" in
	battery ) upower -i $(upower -e | grep BAT) | bat --plain --language=help ;;
	cpu     ) lscpu ;;
	drive   ) lsblk ;;
	gpu     ) lsgpu ;;
	memory  ) free -h ;;
	pci     ) lspci ;;
	system  ) fastfetch ;;
	time    ) timedatectl ;;
	usb     ) lsusb ;;
	*       ) help ;;
esac
