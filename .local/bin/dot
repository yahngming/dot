#!/bin/sh

cd ~/.local/src/dot
git pull
cp -a ~/.local/src/dot/. ~/
chmod +x ~/.local/bin/* ~/.config/nsxiv/exec/*
rm -rf ~/.git ~/postinstall.sh ~/README.md
cd - >/dev/null 2>&1

cd ~/.local/src/sub
git pull
cd ~/Downloads/subconverter
cp ~/.config/subconverter/pref.toml .
cp ~/.config/subconverter/singbox.json ./base
cp ~/.local/src/sub/clash.ini .
cp ~/.local/src/sub/gistconf.ini .
cp ~/.local/src/sub/singbox.ini .
cd - >/dev/null 2>&1

if [ "$BROWSER" == "firefox" ]; then
	cd ~/.config/firefox
	chmod +x *.sh
	./updater.sh
	./prefsCleaner.sh
	cd - >/dev/null 2>&1
fi
