#!/bin/sh

cd ~/.local/src/dot
git pull
cp -a ~/.local/src/dot/. ~/
chmod +x ~/.local/bin/* ~/.config/nsxiv/exec/*
rm -rf ~/.git ~/postinstall.sh ~/README.md
cd - >/dev/null 2>&1

cd ~/.local/src/sub
git pull
cp ~/.config/subconverter/* ~/Downloads/subconverter/base
cp ~/.config/subconverter/pref.toml ~/Downloads/subconverter
cp ~/.local/src/sub/clash.ini ~/Downloads/subconverter
cp ~/.local/src/sub/gistconf.ini ~/Downloads/subconverter
cp ~/.local/src/sub/singbox.ini ~/Downloads/subconverter
cd - >/dev/null 2>&1

if [ "$BROWSER" == "firefox" ]; then
	cd ~/.config/firefox
	chmod +x *.sh
	./updater.sh
	./prefsCleaner.sh
	cd - >/dev/null 2>&1
fi
