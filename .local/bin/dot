#!/bin/sh

cd ~/.local/src/dot
git pull
cp -a ~/.local/src/dot/. ~/
chmod +x ~/.local/bin/*
rm -rf ~/.git ~/postinstall.sh ~/README.md
cd - >/dev/null 2>&1

if [ -n "$WAYLAND_DISPLAY" ]; then
	killall waybar
	hyprctl dispatch exec waybar >/dev/null 2>&1
	hyprctl dispatch exec hyprpaper >/dev/null 2>&1
fi
