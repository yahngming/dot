#!/bin/sh

cd ~/.local/src/dot
git pull
cp -a ~/.local/src/dot/. ~/
chmod +x ~/.local/bin/* ~/.config/nsxiv/exec/*
rm -rf ~/.git ~/postinstall.sh ~/README.md
cd - >/dev/null 2>&1

cd ~/.local/src/sub
git pull
mkdir -p ~/.config/mihomo
cp ~/.local/src/sub/clash ~/.config/mihomo/config.yaml
cd - >/dev/null 2>&1

if [ "$BROWSER" == "firefox" ]; then
	cd ~/.config/firefox
	chmod +x *.sh
	./updater.sh
	./prefsCleaner.sh
	cd - >/dev/null 2>&1
fi

if [ "$BROWSER" == "qutebrowser" ]; then
	pgrep qutebrowser && qutebrowser ":config-source"
fi
