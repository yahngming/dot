#!/bin/sh

case "$(printf " top\n lock\n󰤄 sleep\n reboot\n󰤆 shutdown\n󰗽 logout" | dmenu )" in
	' top') $TERMINAL -e btop ;;
	' lock') slock ;;
	'󰤄 sleep') slock systemctl suspend ;;
	' reboot') systemctl reboot ;;
	'󰤆 shutdown') systemctl poweroff ;;
	"󰗽 logout") pkill dwm ;;
	*) exit 1 ;;
esac
