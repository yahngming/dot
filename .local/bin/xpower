#!/bin/sh

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "⚿ lock\n⏾ sleep\n↺ reboot\n⏻ shutdown\n⛒ quit\n♽ refresh" | dmenu -i -p 'Action: ')" in
	'⚿ lock') slock ;;
	'⏾ sleep') slock $ctl suspend ;;
	'↺ reboot') $ctl reboot ;;
	'⏻ shutdown') $ctl poweroff ;;
	"⛒ quit") kill -TERM "$(wmpid)" ;;
	"♽ refresh") kill -HUP "$(wmpid)" ;;
	*) exit 1 ;;
esac
