#!/bin/sh

start() {
	sudo systemctl start docker.service
	docker compose -f "~/.config/dockers/$2.yaml" up -d
}

stop() {
	docker compose -f "~/.config/dockers/$2.yaml" stop
	sudo systemctl stop docker.socket
	sudo systemctl stop docker.service
}

status() {
	id=$(docker ps -aq --filter "name=$2")
	if [ -n "$id" ]; then
		echo "$2 running"
	else
		echo "$2 stopped"
	fi
}

help() {
	echo "Usage: dockers [start|stop|status]"
}

case "$1" in
	start|stop|status ) $1 ;;
	*                 ) help ;;
esac
