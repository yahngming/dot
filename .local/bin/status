#!/bin/sh

interval=0

bat() {
  get_capacity="$(cat /sys/class/power_supply/BAT1/capacity)"
  printf "  "
  printf " $get_capacity"
}

brt() {
  printf "  "
  printf " %.0f\n" $(cat /sys/class/backlight/*/brightness)
}

clk() {
	printf " 󱑆 "
	printf " $(date '+%H:%M') "
}

cpu() {
  cpu_val=$(grep -o "^[^ ]*" /proc/loadavg)
  printf "  "
  printf " $cpu_val"
}

ram() {
  printf "  "
  printf " $(free -h | awk '/^Mem/ { print $3 }' | sed s/i//g)"
}

cud() {
  pkg=$({ timeout 20 checkupdates 2>/dev/null || true; } | wc -l)
  if [ -z "$pkg" ]; then
    printf "  Fully Updated"
  else
    printf "  $pkg"" updates"
  fi
}

net() {
	case "$(cat /sys/class/net/wl*/operstate 2>/dev/null)" in
	up) printf " 󰤨 %s" " Connected" ;;
	down) printf " 󰤭 %s" " Disconnected" ;;
	esac
}

while true; do
  [ $interval = 0 ] || [ $(($interval % 3600)) = 0 ] && pkg=$(cud)
  interval=$((interval + 1))
  sleep 1 && xprop -root -set WM_NAME "$pkg $(cpu) $(ram) $(clk)"
done
