#!/bin/sh

screensavers=(\
	"$TERMINAL -F -e asciiquarium"\
	"$TERMINAL -F -e cmatrix"\
	"$TERMINAL -F -e lavat -c red -R 1 -k magenta"\
	"$TERMINAL -F -e pipes -R"\
	"$TERMINAL -F -e ttysvr"\
)

for screensaver in "${screensavers[@]}"; do
	if pgrep -fx "$screensaver" > /dev/null; then
		exit
	fi
done

${screensavers[$(($RANDOM%${#screensavers[@]}))]}
