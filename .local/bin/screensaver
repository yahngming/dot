#!/bin/sh

screensavers=(
	"st -F -e asciiquarium -s -t"
	"st -F -e neo-matrix -s"
	"st -F -e lavat -c red -R 1 -k magenta"
	"st -F -e ttesvr"
	"st -F -e ttysvr"
)

for screensaver in "${screensavers[@]}"; do
	if pgrep -fx "$screensaver"; then
		break
	fi
	unset screensaver
done

off() {
	if [ -n "$WAYLAND_DISPLAY" ]; then
		hyprctl dispatch dpms on
	fi
	brightnessctl -r
	pkill -fx "$screensaver"
}

on() {
	if [ -f ~/.config/screenblank ] && [ -n "$WAYLAND_DISPLAY" ]; then
		hyprctl dispatch dpms off
	elif [ -f ~/.config/screendim ]; then
		brightnessctl -s set 10
	elif [ -f ~/.config/screensaver ] && [ -z "$screensaver" ]; then
		while true; do
			screensaver=${screensavers[$(($RANDOM%${#screensavers[@]}))]}
			read -r -a command <<< "$screensaver"
			if command -v "${command[1]}"; then
				break
			fi
		done
		eval "$screensaver"
	fi
}

help() {
	echo "Usage: screensaver [MODE]"
	echo "  off        turn off screensaver"
	echo "  on         start screensaver"
}

mode=${1:-help}
$mode
