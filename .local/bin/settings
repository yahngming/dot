#!/bin/sh

pkill $LAUNCHER && exit

case "$LAUNCHER" in
	dmenu ) opt="-g 3 -l 6" ;;
esac

menu="\
 Bar\n\
 Bluetooth\n\
󰅟 Cloud\n\
 Coffee\n\
󰍹 Display\n\
 Dotfiles\n\
󰊖 Gamemode\n\
󰇧 IME\n\
󰌌 Keyboard\n\
 Password\n\
󰐪 Printer\n\
󰌘 Proxy\n\
󰡰 SMB\n\
 Theme\n\
󰇧 Timezone\n\
󰃢 Trash\n\
󰚰 Update\n\
󱊞 USB\n\
󰸉 Wallpaper\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | menu $opt "$@") in
	*Bar*       ) barmenu ;;
	*Bluetooth* ) btmenu ;;
	*Cloud*     ) tui "rclone --progress copy ~/Documents disroot:/Documents" ;;
	*Coffee*    ) coffee ;;
	*Display*   ) dispmenu ;;
	*Dotfiles*  ) tui "dot" ;;
	*Gamemode*  ) gamemode ;;
	*IME*       ) fcitx5-configtool ;;
	*Keyboard*  ) keymap ;;
	*Password*  ) passmenu ;;
	*Printer*   ) browser --new-tab http://localhost:631 ;;
	*Proxy*     ) proxymenu ;;
	*SMB*       ) smbmenu ;;
	*Theme*     ) thememenu ;;
	*Timezone*  ) sudo -A timedatectl set-timezone "$(curl --fail https://ipapi.co/timezone)" ;;
	*Trash*     ) tui "trash-empty" ;;
	*Update*    ) tui "up" ;;
	*USB*       ) usbmenu ;;
	*Wallpaper* ) wallpaper ;;
	*WLAN*      ) wlanmenu ;;
	*           ) exit 1 ;;
esac
