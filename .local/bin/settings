#!/bin/sh

case "$MENU" in
	dmenu) opt="-g 3 -l 6" ;;
esac

menu="\
 Bluetooth\n\
 Cleanup\n\
󰅟 Cloud\n\
 Coffee\n\
󰍹 Display\n\
 Dotfiles\n\
󰊖 Gamemode\n\
󰇧 IME\n\
󰌌 Keyboard\n\
 Passwords\n\
󰐪 Printer\n\
󰌘 Proxy\n\
󰡰 SMB\n\
󰇧 Timezone\n\
󰚰 Update\n\
󱊞 USB\n\
󰸉 Wallpaper\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | $MENU $opt "$@") in
	*Bluetooth* ) btmenu ;;
	*Cleanup*   ) $TERMINAL -e sudo pacman -Rns $(pacman -Qtdq) ;;
	*Cloud*     ) $TERMINAL -e rclone --progress copy ~/Documents disroot:/Documents ;;
	*Coffee*    ) coffee ;;
	*Display*   ) dispmenu ;;
	*Dotfiles*  ) $TERMINAL -e dot ;;
	*Gamemode*  ) gamemode ;;
	*IME*       ) fcitx5-configtool ;;
	*Keyboard*  ) keymap ;;
	*Passwords* ) passmenu ;;
	*Printer*   ) $BROWSER --new-tab localhost:631 ;;
	*Proxy*     ) $BROWSER --new-tab clash.razord.top ;;
	*SMB*       ) smbmenu ;;
	*Timezone*  ) sudo -A timedatectl set-timezone "$(curl --fail https://ipapi.co/timezone)" ;;
	*Update*    ) $TERMINAL -e yay ;;
	*USB*       ) usbmenu ;;
	*Wallpaper* ) wallpaper ;;
	*WLAN*      ) wlanmenu ;;
	*           ) exit 1 ;;
esac
