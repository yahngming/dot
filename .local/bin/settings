#!/bin/sh

case "$MENU" in
	dmenu ) opt="-g 3 -l 6" ;;
esac

menu="\
 Bar\n\
 Bluetooth\n\
󰅟 Cloud\n\
 Coffee\n\
 Color\n\
󰍹 Display\n\
 Dotfiles\n\
󰊖 Gamemode\n\
󰇧 IME\n\
󰌌 Keyboard\n\
 Passwords\n\
󰐪 Printer\n\
󰌘 Proxy\n\
󰡰 SMB\n\
󰇧 Timezone\n\
󰚰 Update\n\
󱊞 USB\n\
󰸉 Wallpaper\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | $MENU $opt "$@") in
	*Bar*       ) barmenu ;;
	*Bluetooth* ) btmenu ;;
	*Cloud*     ) tui "rclone --progress copy ~/Documents disroot:/Documents" ;;
	*Coffee*    ) coffee ;;
	*Color*     ) colormenu ;;
	*Display*   ) dispmenu ;;
	*Dotfiles*  ) tui "dot" ;;
	*Gamemode*  ) gamemode ;;
	*IME*       ) fcitx5-configtool ;;
	*Keyboard*  ) keymap ;;
	*Passwords* ) passmenu ;;
	*Printer*   ) browser --new-tab http://localhost:631 ;;
	*Proxy*     ) browser --new-tab https://clash.razord.top ;;
	*SMB*       ) smbmenu ;;
	*Timezone*  ) sudo -A timedatectl set-timezone "$(curl --fail https://ipapi.co/timezone)" ;;
	*Update*    ) tui "up" ;;
	*USB*       ) usbmenu ;;
	*Wallpaper* ) wallpaper ;;
	*WLAN*      ) wlanmenu ;;
	*           ) exit 1 ;;
esac
