#!/bin/sh

pkill $LAUNCHER && exit

case "$LAUNCHER" in
	dmenu ) opt="-g 3 -l 6" ;;
esac

menu="\
 About\n\
 Audio\n\
 Bar\n\
 Bluetooth\n\
 Cloud\n\
 Coffee\n\
󰍹 Display\n\
 Dotfiles\n\
 Fetch\n\
󰊖 Gamemode\n\
󰇧 IME\n\
󰌌 Keyboard\n\
 Password\n\
󰐪 Printer\n\
󰌘 Proxy\n\
 Screensaver\n\
󰡰 SMB\n\
 Theme\n\
󰔠 Timezone\n\
󰚰 Update\n\
󱊞 USB\n\
󰸉 Wallpaper\n\
󰖩 WLAN\n\
"

case $(printf "$menu" | menu $opt "$@") in
	*About*       ) tui about ;;
	*Audio*       ) audiomenu ;;
	*Bar*         ) barmenu ;;
	*Bluetooth*   ) btmenu ;;
	*Cloud*       ) cloudmenu ;;
	*Coffee*      ) coffee ;;
	*Display*     ) dispmenu ;;
	*Dotfiles*    ) tui dot ;;
	*Fetch*       ) fetchmenu ;;
	*Gamemode*    ) gamemode ;;
	*IME*         ) fcitx5-configtool ;;
	*Keyboard*    ) keymap ;;
	*Password*    ) passmenu ;;
	*Printer*     ) browser --new-tab http://localhost:631 ;;
	*Proxy*       ) proxymenu ;;
	*Screensaver* ) screensavermenu ;;
	*SMB*         ) smbmenu ;;
	*Theme*       ) thememenu ;;
	*Timezone*    ) tui tzselect ;;
	*Update*      ) tui up ;;
	*USB*         ) usbmenu ;;
	*Wallpaper*   ) wallpapermenu ;;
	*WLAN*        ) wlanmenu ;;
	*             ) exit 1 ;;
esac
