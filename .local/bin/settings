#!/bin/sh

pkill "$LAUNCHER" && exit

case "$LAUNCHER" in
	dmenu ) opt="-g 3 -l 7" ;;
esac

menu="\
󱡫 Audio\n\
 Bar\n\
󰂳 Bluetooth\n\
 Caffeine\n\
 Cloud\n\
 Desktop\n\
󰍹 Display\n\
 Dotfiles\n\
 Fetch\n\
 IME\n\
 Password\n\
󱞆 Printer\n\
󰌘 Proxy\n\
 Screensaver\n\
󰲁 SMB\n\
󰔎 Theme\n\
󱢃 Timezone\n\
󰚰 Update\n\
󰕓 USB\n\
󰸉 Wallpaper\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | menu $opt "$@") in
	*Audio*       ) audiomenu ;;
	*Bar*         ) barmenu ;;
	*Bluetooth*   ) btmenu ;;
	*Caffeine*    ) caffeinemenu ;;
	*Cloud*       ) cloudmenu ;;
	*Desktop*     ) desktopmenu ;;
	*Display*     ) dispmenu ;;
	*Dotfiles*    ) tui "dot" ;;
	*Fetch*       ) fetchmenu ;;
	*IME*         ) fcitx5-configtool ;;
	*Password*    ) passmenu ;;
	*Printer*     ) xdg-open http://127.0.0.1:631 ;;
	*Proxy*       ) proxymenu ;;
	*Screensaver* ) screensavermenu ;;
	*SMB*         ) smbmenu ;;
	*Theme*       ) thememenu ;;
	*Timezone*    ) timezonemenu ;;
	*Update*      ) tui "up" ;;
	*USB*         ) usbmenu ;;
	*Wallpaper*   ) wallpapermenu ;;
	*WLAN*        ) wlanmenu ;;
esac
