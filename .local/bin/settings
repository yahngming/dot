#!/bin/sh

pkill $LAUNCHER && exit

case "$LAUNCHER" in
	dmenu ) opt="-g 3 -l 6" ;;
esac

menu="\
󱡫 Audio\n\
 Bar\n\
󰂯 Bluetooth\n\
 Caffeine\n\
 Cloud\n\
󰍹 Display\n\
 Dotfiles\n\
 Fetch\n\
 IME\n\
 Password\n\
󱞆 Printer\n\
󰌘 Proxy\n\
 Screensaver\n\
󰲁 SMB\n\
󰔎 Theme\n\
󰔠 Timezone\n\
󰚰 Update\n\
󱇰 USB\n\
󰸉 Wallpaper\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | menu $opt "$@") in
	*Audio*       ) audiomenu ;;
	*Bar*         ) barmenu ;;
	*Bluetooth*   ) btmenu ;;
	*Caffeine*    ) caffeinemenu ;;
	*Cloud*       ) cloudmenu ;;
	*Display*     ) dispmenu ;;
	*Dotfiles*    ) tui dot ;;
	*Fetch*       ) fetchmenu ;;
	*IME*         ) fcitx5-configtool ;;
	*Password*    ) passmenu ;;
	*Printer*     ) xdg-open http://localhost:631 ;;
	*Proxy*       ) proxymenu ;;
	*Screensaver* ) screensavermenu ;;
	*SMB*         ) smbmenu ;;
	*Theme*       ) thememenu ;;
	*Timezone*    ) tui tzselect ;;
	*Update*      ) tui up ;;
	*USB*         ) usbmenu ;;
	*Wallpaper*   ) wallpapermenu ;;
	*WLAN*        ) wlanmenu ;;
esac
