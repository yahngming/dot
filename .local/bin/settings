#!/bin/sh

case "$MENU" in
	dmenu  ) MENU="dmenu -g 3 -l 6" ;;
	fuzzel ) MENU="fuzzel --dmenu" ;;
	rofi   ) MENU="rofi -dmenu" ;;
	walker ) MENU="walker --dmenu" ;;
esac

menu="\
 Bluetooth\n\
 Coffee\n\
󰍹 Display\n\
 Dotfiles\n\
 IME\n\
󰌌 Keyboard\n\
 Passwords\n\
󰐪 Printer\n\
󰌘 Proxy\n\
󰡰 SMB\n\
󰇧 Timezone\n\
󰚰 Update\n\
󱊞 USB\n\
󰸉 Wallpaper\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | $MENU "$@") in
	*Bluetooth* ) btmenu ;;
	*Coffee*    ) coffee ;;
	*Display*   ) dispmenu ;;
	*Dotfiles*  ) $TERMINAL -e dot ;;
	*IME*       ) fcitx5-configtool ;;
	*Keyboard*  ) keymap ;;
	*Passwords* ) passmenu ;;
	*Printer*   ) $BROWSER --new-tab localhost:631 ;;
	*Proxy*     ) $BROWSER --new-tab clash.razord.top ;;
	*SMB*       ) smbmenu ;;
	*Timezone*  ) sudo -A timedatectl set-timezone "$(curl --fail https://ipapi.co/timezone)" ;;
	*Update*    ) $TERMINAL -e yay ;;
	*USB*       ) usbmenu ;;
	*Wallpaper* ) wallpaper ;;
	*WLAN*      ) wlanmenu ;;
	*           ) exit 1 ;;
esac
