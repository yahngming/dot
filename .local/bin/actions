#!/bin/sh

case "$(printf " Task Manager\n󱚾 WLAN\n󰂳 Bluetooth\n󰍺 Displays\n󰡰 Mount Samba\n󱊞 Mount USB\n󱊟 Unmount USB\n Password Manager\n󰐥 Power" | dmenu -g 3 -l 5)" in
	' Task Manager'     ) $TERMINAL -e btop ;;
	'󱚾 WLAN'             ) wlanmenu ;;
	'󰂳 Bluetooth'        ) btmenu ;;
	'󰍺 Displays'         ) dispmenu ;;
	"󰡰 Mount Samba"      ) mountsmb ;;
	'󱊞 Mount USB'        ) mountusb ;;
	'󱊟 Unmount USB'      ) umountusb ;;
	' Password Manager' ) passmenu ;;
	'󰐥 Power'            ) powermenu ;;
	*                  ) exit 1 ;;
esac
