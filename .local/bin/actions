#!/bin/sh

case "$(printf "Task Manager\nWLAN\nBluetooth\nDisplays\nMount Samba\nMount USB\nUnmount USB\nPassword Manager\nPower" | dmenu)" in
	'Task Manager'     ) $TERMINAL -e btop ;;
	'WLAN'             ) wlanmenu ;;
	'Bluetooth'        ) btmenu ;;
	'Displays'         ) dispmenu ;;
	"Mount Samba"      ) mountsmb ;;
	'Mount USB'        ) mountusb ;;
	'Unmount USB'      ) umountusb ;;
	'Password Manager' ) passmenu ;;
	'Power'            ) powermenu ;;
	*                  ) exit 1 ;;
esac
