#!/bin/sh

case "$(printf " System\n󰤁 Power\n󱚾 WLAN\n Bluetooth\n󰍺 Displays\n󰡰 Samba\n󱊞 USB\n Eject\n Passwords" | dmenu -g 3 -l 5)" in
	' System'  ) $TERMINAL -e btop ;;
	'󰤁 Power'     ) powermenu ;;
	'󱚾 WLAN'      ) wlanmenu ;;
	' Bluetooth' ) btmenu ;;
	'󰍺 Displays'  ) dispmenu ;;
	"󰡰 Samba"     ) mountsmb ;;
	'󱊞 USB'       ) mountusb ;;
	' Eject'     ) umountusb ;;
	' Passwords' ) passmenu ;;
	*             ) exit 1 ;;
esac
