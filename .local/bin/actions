#!/bin/sh

case "$(printf "WLAN\nBluetooth\nDisplays\nMount Samba\nMount USB\nUnmount USB\nPassword Manager" | dmenu)" in
	'Task Manager'     ) btop ;;
	'WLAN'             ) wlanmenu ;;
	'Bluetooth'        ) btmenu ;;
	'Displays'         ) dispmenu ;;
	"Mount Samba"      ) mountsmb ;;
	'Mount USB'        ) mountusb ;;
	'Unmount USB'      ) umountusb ;;
	'Password Manager' ) passmenu ;;
	'Power'            ) powermenu ;;
	*                  ) exit 1 ;;
esac
