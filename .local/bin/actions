#!/bin/sh

case "$(printf " Tasks\n󱚾 WLAN\n󰂱 Bluetooth\n󰍺 Displays\n󰡰 Samba\n󱊞 USB\n󱊟 Eject\n Passwords\n󰐥 Power" | dmenu -g 3 -l 5)" in
	' Tasks'     ) $TERMINAL -e btop ;;
	'󱚾 WLAN'      ) wlanmenu ;;
	'󰂱 Bluetooth' ) btmenu ;;
	'󰍺 Displays'  ) dispmenu ;;
	"󰡰 Samba"     ) mountsmb ;;
	'󱊞 USB'       ) mountusb ;;
	' Eject'     ) umountusb ;;
	' Passwords' ) passmenu ;;
	'󰐥 Power'     ) powermenu ;;
	*             ) exit 1 ;;
esac
