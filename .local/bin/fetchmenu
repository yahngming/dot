#!/bin/sh

menu="\
auto\n\
----\n\
arch\n\
clippy\n\
dos\n\
ibm\n\
invader\n\
thinkpad\n\
windows\n\
"

choice=$(printf "$menu" | menu "$@")

if [ "$choice" == "auto" ]; then
	case "$(cat /sys/devices/virtual/dmi/id/product_family)" in
		*ThinkPad* ) choice="thinkpad" ;;
	esac
	case "$(cat /sys/devices/virtual/dmi/id/product_name)" in
		*ITX*      ) choice="dos" ;;
		*          ) choice="arch" ;;
	esac
fi

if [ -f ~/.config/fastfetch/config-$choice.jsonc ] && [ -f ~/.config/fastfetch/logo-$choice.txt ]; then
	cp ~/.config/fastfetch/config-$choice.jsonc ~/.config/fastfetch/config.jsonc
	cp ~/.config/fastfetch/logo-$choice.txt ~/.config/fastfetch/logo.txt
fi
