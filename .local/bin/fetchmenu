#!/bin/sh

case "$LAUNCHER" in
	dmenu ) opt="-noi" ;;
esac

menu="\
config-box\n\
config-inline\n\
config-omarchy\n\
logo-auto\n\
logo-arch\n\
logo-omarchy\n\
logo-thinkpad\n\
logo-trackpoint\n\
"

config=$(printf "$menu" | menu $opt -p "Select a fetch style:" "$@")

if [ -f ~/.config/fastfetch/config-$fetch.jsonc ]; then
	cp ~/.config/fastfetch/config-$fetch.jsonc ~/.config/fastfetch/config.jsonc
fi
