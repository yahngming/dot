#!/bin/sh

menu="\
 Bluetooth\n\
 Coffee\n\
󰍹 Display\n\
 Dotfiles\n\
󰌌 Keyboard\n\
 Passwords\n\
 Power\n\
󰐪 Printer\n\
󰌘 Proxy\n\
󰡰 SMB\n\
 Tasks\n\
󰇧 Timezone\n\
󰚰 Update\n\
󱊞 USB\n\
󱚾 WLAN\n\
"

case $(printf "$menu" | dmenu -g 3 -l 5 "$@") in
	*Bluetooth* ) btmenu -noi -p Bluetooth;;
	*Coffee*    ) coffee ;;
	*Display*   ) dispmenu ;;
	*Dotfiles*  ) $TERMINAL -e dot ;;
	*Keyboard*  ) keymap ;;
	*Passwords* ) passmenu ;;
	*Power*     ) powermenu ;;
	*Printer*   ) $BROWSER --new-tab localhost:631 ;;
	*Proxy*     ) $BROWSER --new-tab clash.razord.top ;;
	*SMB*       ) smbmenu ;;
	*Tasks*     ) $TERMINAL -e btop ;;
	*Timezone*  ) sudo -A timedatectl set-timezone "$(curl --fail https://ipapi.co/timezone)" ;;
	*Update*    ) $TERMINAL -e yay ;;
	*USB*       ) usbmenu ;;
	*WLAN*      ) wlanmenu ;;
	*           ) exit 1 ;;
esac
