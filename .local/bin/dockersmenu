#!/bin/sh

tui "lazydocker" && exit

menu="\
$(dockers ps open-webui)\n\
$(dockers ps sub-store)\n\
"

choice=$(printf "$menu" | menu "$@")
name=${choice%% *}
state=${choice#* }

if [ "$state" == "stopped" ]; then
	tui "dockers start $name"
elif [ "$state" == "running" ]; then
	tui "dockers stop $name"
fi
