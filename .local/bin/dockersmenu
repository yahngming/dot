#!/bin/sh

menu="\
ó°¨‡ Dashboard\n\
open-webui $(docker ps -aq --filter "name=open-webui" && echo "running" || echo "stopped")\n\
sub-store\n\
"

case $(printf "$menu" | menu $opt -p "docker $(systemctl is-active docker.service)" "$@") in
	*Dashboard* ) tui "lazydocker" ;;
	*Start*     ) tui "dockers start" ;;
	*Stop*      ) tui "dockers stop" ;;
esac
