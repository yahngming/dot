#!/bin/sh

source ~/.local/bin/lib

dark() {
	touch -f ~/.config/dark
	theme
	systemctl --user stop sun@darkmode.timer
	systemctl --user disable sun@darkmode.timer
}

help() {
	echo "Usage:"
	echo "  darkmode [MODE]"
	echo "    auto         auto switch"
	echo "    dark         dark mode"
	echo "    light        light mode"
}

mode=${1:-help}
$mode
