#!/bin/sh

menu="\
󰔎 Auto switch\n\
 Dark mode\n\
 Light mode\n\
"

theme=$(awk '{print $1; exit}' "$config")

case $(printf "$menu" | menu -p "$theme mode activated" "$@") in
	*Auto*)
		theme auto
		systemctl --user enable --now sun@themeauto.timer
		;;
	*Dark*)
		theme dark
		systemctl --user disable --now sun@themeauto.timer
		;;
	*Light*)
		theme light
		systemctl --user disable --now sun@themeauto.timer
		;;
esac
