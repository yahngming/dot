#!/bin/sh

menu="\
󰔎 Auto switch\n\
 Dark mode\n\
 Light mode\n\
"

config="$HOME/.config/theme"
theme=$(awk '{print $1; exit}' "$config")

case $(printf "$menu" | menu -p "$theme mode activated" "$@") in
	*Auto*)
		echo "auto" > "$config"
		theme setup
		;;
	*Dark*)
		echo "dark" > "$config"
		theme setup
		;;
	*Light*)
		echo "light" > "$config"
		theme setup
		;;
esac
