#!/bin/sh

case "$LAUNCHER" in
	dmenu ) opt="-noi" ;;
esac

menu="\
 Backup to cloud\n\
 Sync from cloud\n\
"

case $(printf "$menu" | menu $opt -p "Cloud" "$@") in
	*Backup* ) tui "rclone --progress copy ~/Documents disroot:/Documents" ;;
	*Sync*   ) tui "rclone --ignore-existing --progress copy disroot:/Documents ~/Documents" ;;
esac
