#!/bin/sh

case "$LAUNCHER" in
	dmenu ) opt="-noi" ;;
esac

menu="\
Auto detect\n\
arch\n\
omarchy\n\
thinkpad\n\
trackpoint\n\
"

logo=$(printf "$menu" | menu $opt -p "Select a logo:" "$@")

if [ "$logo" == "Auto detect" ]; then
	case "$(cat /sys/devices/virtual/dmi/id/product_family)" in
		*ThinkPad* ) logo="thinkpad" ;;
		*          ) logo="arch" ;;
	esac
fi

if [ -f ~/.config/fastfetch/$logo.txt ]; then
	cp ~/.config/fastfetch/$logo.txt ~/.config/fastfetch/logo.txt
fi
