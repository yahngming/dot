#!/bin/sh

pkill $LAUNCHER && exit

menu="\
 Lock\n\
󰗽 Logout\n\
󰤄 Sleep\n\
 Reboot\n\
 Bios\n\
󰤆 Shutdown\n\
"

case $(printf "$menu" | menu "$@") in
	*Lock*     ) locker ;;
	*Logout*   ) pkill -KILL -u $USER ;;
	*Sleep*    ) systemctl sleep ;;
	*Reboot*   ) systemctl reboot ;;
	*Bios*     ) systemctl reboot --firmware-setup ;;
	*Shutdown* ) systemctl poweroff ;;
	*          ) exit 1 ;;
esac
