#!/bin/sh

case "$MENU" in
	dmenu  ) MENU="dmenu" ;;
	fuzzel ) MENU="fuzzel --dmenu" ;;
	rofi   ) MENU="rofi -dmenu" ;;
esac

menu="\
 lock\n\
󰤄 sleep\n\
󰗽 logout\n\
 reboot\n\
󰤆 shutdown\n\
"

case $(printf "$menu" | $MENU "$@") in
	*lock*     ) loginctl lock-session ;;
	*sleep*    ) systemctl sleep ;;
	*logout*   ) pkill -KILL -u $USER ;;
	*reboot*   ) systemctl reboot ;;
	*shutdown* ) systemctl poweroff ;;
	*          ) exit 1 ;;
esac
