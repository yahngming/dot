#!/bin/sh

case "$LAUNCHER" in
	dmenu ) opt="-noi" ;;
esac

menu="\
󰨇 Dashboard\n\
 Start containers\n\
"

case $(printf "$menu" | menu $opt -p "docker $(systemctl is-active docker.service)" "$@") in
	*Dashboard*    ) tui "lazydocker" ;;
	*Start*        ) for f in ~/.config/docker/*.yaml; do docker compose -f "$f" up -d; done ;;
esac
