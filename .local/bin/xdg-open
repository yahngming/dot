#!/bin/sh

case $(file --mime-type -Lb "$@") in
	application/octet-stream|application/schema+json|application/toml|text/* ) bat --paging always "$@" ;;
	application/pdf ) setsid -f zathura >/dev/null 2>&1 "$@" ;;
	image/* ) setsid -f nsxiv >/dev/null 2>&1  "$@" ;;
	video/* ) setsid -f mpv >/dev/null 2>&1 "$@" ;;
	*office* ) setsid -f libreoffice >/dev/null 2>&1 "$@" ;;
	* ) /usr/bin/xdg-open "$@" ;;
esac
