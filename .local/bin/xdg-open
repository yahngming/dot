#!/bin/sh

file=$(basename "$@")
extn="${file##*.}"
extp="*${extn}*"

images="png jpg gif JPG"
movies="mp4 avi ogm mkv webm flv"
audios="mp3 ogg flac"
ftmods="MOD XM mod xm"
otmods="s3m it"

if [[ $images = $extp ]]; then
        sxiv "$@"
elif [[ $movies = $extp ]]; then
        mplayer "$@"
elif [[ $audios = $extp ]]; then
        mplayer "$@"
elif [[ $ftmods = $extp ]]; then
        ft2-clone "$@" &
elif [[ $otmods = $extp ]]; then
        modplug123 "$@"
elif [[ "$extn" = "pdf" ]]; then
        xpdf "$@"
else
        /usr/bin/xdg-open "$@"
fi
