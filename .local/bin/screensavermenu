#!/bin/sh

case "$LAUNCHER" in
	dmenu ) opt="-noi" ;;
esac

menu="\
 Disable screensaver\n\
 Preview screensaver\n\
󰱊 Set screensaver to dim\n\
 Set screensaver to random\n\
"

case $(printf "$menu" | menu $opt -p "Screensaver" "$@") in
	*Disable*)
		rm -f ~/.config/screendim
		rm -f ~/.config/screendsaver
		;;
	*Preview*)
		screensaver on
		;;
	*dim*)
		rm -f ~/.config/screendsaver
		touch -f ~/.config/screendim
		;;
	*random*)
		rm -f ~/.config/screendim
		touch -f ~/.config/screensaver
		;;
esac
