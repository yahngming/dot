#!/bin/sh

menu="\
asciiquarium\n\
lavat\n\
matrix\n\
terminaltexteffects\n\
ttysvr\n\
"

case $(printf "$menu" | menu "$@") in
	random)
		screensaver preview
		;;
	none)
		rm -f ~/.config/screen*
		;;
	asciiquarium)
		rm -f ~/.config/screen*
		;;
	lavat)
		rm -f ~/.config/screen*
		;;
	matrix)
		rm -f ~/.config/screen*
		;;
	terminaltexteffects)
		rm -f ~/.config/screen*
		;;
	ttysvr)
		rm -f ~/.config/screen*
		;;
esac
