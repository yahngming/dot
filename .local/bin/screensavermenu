#!/bin/sh

case "$LAUNCHER" in
	dmenu ) opt="-noi" ;;
esac

menu="\
 Preview screensaver\n\
󰄱 Set to blank screen\n\
󰱊 Set to dim screen\n\
 Set to random screensaver\n\
 Turn off screensaver\n\
"

case $(printf "$menu" | menu $opt -p "Screensaver" "$@") in
	*Preview*)
		screensaver preview
		;;
	*blank*)
		rm -f ~/.config/screen*
		touch -f ~/.config/screenblank
		;;
	*dim*)
		rm -f ~/.config/screen*
		touch -f ~/.config/screendim
		;;
	*random*)
		rm -f ~/.config/screen*
		touch -f ~/.config/screensaver
		;;
	*off*)
		rm -f ~/.config/screen*
		;;
esac
