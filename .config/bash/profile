[[ -f ~/.bashrc ]] && . ~/.bashrc

export BROWSER="firefox"
export EDITOR="vim"
export GTK_IM_MODULE=fcitx
export HISTCONTROL="erasedups:ignorespace"
export PATH="${PATH}:${HOME}/.local/bin"
export QT_IM_MODULE=fcitx
export TERMINAL="st"
export XMODIFIERS=@im=fcitx

if [ -z "$DISPLAY" ] && [ "$XDG_VTNR" = 1 ]; then
  exec startx
fi
