map ; :
map 0 ^
map <C-h> <C-W>h
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-l> <C-W>l
map <Space> <Leader>
map <Leader>cd :cd %:p:h<CR>:pwd<CR>
map <Leader>tc :tabclose<CR>
map <Leader>te :tabedit <C-r>=escape(expand("%:p:h"), " ")<CR>/
map <Leader>tn :tabnew<CR>
map <Leader>tt :tabnext<CR>
map <Leader>q :q!<CR>
map <Leader>w :w!<CR>
map <Leader>sc :setlocal spell!<CR>
map <Leader>sl :set list!<CR>
map <Leader>ss :source $HOME/.config/vim/session.vim<CR>
map <Leader>sv :args $HOME/.config/vim/vimrc \| tab all<CR>
map <silent> <Esc><Esc> :nohlsearch<CR>
noremap j gj
noremap k gk
inoremap jk <Esc>
inoremap kj <Esc>
vnoremap <silent> # :<C-u>call VisualSelection('', '')<CR>/<C-R>=@/<CR><CR>
