autocmd BufEnter * if tabpagenr('$') == 1 && winnr('$') == 1 && exists('b:NERDTree') && b:NERDTree.isTabTree() | quit | endif
autocmd BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
autocmd FocusGained,BufEnter * silent! checktime
autocmd FocusGained * :let @+ = system('wl-paste --no-newline')
autocmd FocusLost * :call system("wl-copy --trim-newline", @+)
autocmd VimLeave * mksession! ~/.config/vim/session.vim

let $LANG='en'
set autoindent
set autoread
set background=dark
set backspace=indent,eol,start
set clipboard=unnamed,unnamedplus
set cmdheight=1
set complete+=kspell
set encoding=utf8
set ffs=unix,dos,mac
set foldcolumn=0
set hidden
set hlsearch
set history=500
set ignorecase
set incsearch
set langmenu=en
set laststatus=2
set lazyredraw
set linebreak
set listchars=space:·,tab:>·
set magic
set mat=2
set mouse=a
set nobackup
set nocompatible
set noerrorbells
set noshowmode
set noswapfile
set nowritebackup
set number
set packpath+=~/.config/vim
set regexpengine=0
set relativenumber
set ruler
set runtimepath+=~/.config/vim
set scrolloff=4
set shiftwidth=8
set showmatch
set showtabline=2
set smartcase
set smartindent
set smarttab
set statusline=
set statusline+=%#Visual#
set statusline+=\ %{mode()}\ 
set statusline+=%#Nontext#
set statusline+=\ %F%y%r%m\ 
set statusline+=%=
set statusline+=\ %{&fileencoding}\ 
set statusline+=%#Visual#
set statusline+=\ %p%%\ %l/%L,%c\ 
set t_Co=256
set t_vb=
set tabstop=8
set tm=500
set tw=500
set viminfo='10,<100,:100,%,n~/.config/vim/viminfo
set visualbell
set whichwrap+=<,>,[,]
set wildignore=*.docx,*.gif,*.img,*.jpg,*.png,*.pdf,*.pyc,*.o,*.xlsx
set wildmenu
set wrap

filetype indent on
filetype plugin on
syntax on

map ; :
map 0 ^
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <C-n> :NERDTreeToggle<CR>
map <Space> <Leader>
map <Leader>q :q!<CR>
map <Leader>w :w!<CR>
map <Leader>. :set list!<CR>
map <silent> <Esc><Esc> :nohlsearch<CR>
imap jk <Esc>
imap kj <Esc>
noremap j gj
noremap k gk
noremap <Down> :tabclose<CR>
noremap <Left> gT
noremap <Right> gt
noremap <Up> :tabnew<CR>
xnoremap <silent> <C-v> :r !wl-paste<CR><CR>
xnoremap <silent> <C-c> y:call system("wl-copy --trim-newline", @+)<CR>
