set expandtab
set ffs=unix,dos,mac
set foldcolumn=0
set hidden
set hlsearch
set history=500
set ignorecase
set incsearch
set langmenu=en
set laststatus=2
set lazyredraw
set linebreak
set listchars=space:Â·
set magic
set mat=2
set mouse=a
