{
	"layer": "top",
	"position": "top",
	"height": 28,
	"reload_style_on_change": true,
	"modules-left": ["ext/workspaces", "wlr/taskbar"],
	"modules-center": [],
	"modules-right": ["tray", "temperature#cpu", "temperature#gpu", "cpu", "memory", "idle_inhibitor", "battery", "network", "wireplumber", "clock"],
	"ext/workspaces": {
		"on-click": "activate"
	},
	"wlr/taskbar": {
		"format": "{icon} {title:.20}",
		"icon-size": 14,
		"tooltip": false,
		"on-click": "activate",
		"on-click-middle": "close"
	},
	"tray": {
		"icon-size": 18,
		"spacing": 5,
		"tooltip": false
	},
	"temperature#cpu": {
		"hwmon-path": ["/sys/class/hwmon/hwmon2/temp1_input", "/sys/class/thermal/thermal_zone0/temp"],
		"format": "{temperatureC}/",
		"tooltip": false
	},
	"temperature#gpu": {
		"hwmon-path": ["/sys/class/hwmon/hwmon1/temp1_input"],
		"format": "{temperatureC}°",
		"tooltip": false
	},
	"cpu": {
		"format": "{usage}/",
		"tooltip": false
	},
	"memory": {
		"format": "{percentage}%",
		"tooltip": false
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "󰈈",
			"deactivated": "󰈉"
		},
		"tooltip": false,
		"timeout": 240
	},
	"battery": {
		"format": "{icon}",
		"format-charging": "{icon}",
		"format-icons": {
			"charging": ["󰢟", "󰢜", "󰂆", "󰂇", "󰂈", "󰢝", "󰂉", "󰢞", "󰂊", "󰂋", "󰂅"],
			"default": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
		},
		"states": {
			"critical": 10
		},
		"tooltip": false
	},
	"network": {
		"format": "{icon}",
		"format-disconnected": "󰤮",
		"format-ethernet": "󰈀",
		"format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
		"tooltip": false
	},
	"wireplumber": {
		"format": "{icon}",
		"format-muted": "󰸈",
		"format-icons": {
			"default": ["󰕿", "󰖀", "󰕾"]
		},
		"tooltip": false,
		"on-click": "volume toggle",
		"on-scroll-down": "volume down",
		"on-scroll-up": "volume up"
	},
	"clock": {
		"format": "{:%R}",
		"tooltip-format": "{calendar}",
		"calendar": {
			"format": {
				"months": "<b>{}</b>",
				"weekdays": "<b>{}</b>",
				"days": "{}",
				"today": "<span color='tomato'><b>{}</b></span>"
			}
		}
	}
}
