{

	"layer": "top",
	"position": "bottom",
	"reload_style_on_change": true,

	"modules-left": ["clock", "tray", "custom/media"],
	"modules-center": ["hyprland/workspaces"],
	"modules-right": ["temperature", "battery", "network", "pulseaudio", "custom/power"],

	"hyprland/workspaces": {
		"all-outputs": true,
		"on-scroll-up": "hyprctl dispatch workspace e-1",
		"on-scroll-down": "hyprctl dispatch workspace e+1",
		"format": "{icon}",
		"format-icons": {
			"default": ""
		},
		"persistent-workspaces": {
			"*": [ 1,2,3,4,5 ]
		}
	},

	"hyprland/window": {
		"separate-outputs": true
	},

	"battery": {
		"format": "{icon}",
		"format-icons": ["󰂃", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
	},

	"clock": {
		"format": "{:%I:%M %p} ",
		"tooltip-format": "<tt>{calendar}</tt>",
		"calendar": {
			"format": {
				"today": "<b>{}</b>"
			}
		}
	},

	"custom/media": {
		"exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}} - {{artist}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
		"max-length": 60,
		"format": "{icon} <span>󰎈 {} 󰎈</span>",
		"format-icons": {
			"Paused": "<span> </span>",
			"Playing": "<span>󰏥 </span>",
			"Stopped": "<span> </span>"
		},
		"on-click": "playerctl play-pause",
		"on-scroll-down": "playerctl volume .05-",
		"on-scroll-up": "playerctl volume .05+",
		"return-type": "json"
	},

	"custom/power": {
		"format" : "󰤆",
		"on-click": "powermenu",
		"on-click-right": "hyprlock",
		"tooltip-format": "Left: Power menu\nRight: Lock screen"
	},

	"network": {
		"format": "{icon}",
		"format-ethernet": "󰈀",
		"format-disconnected": "󰤮",
		"format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
		"tooltip-format": "{essid}",
		"tooltip-format-ethernet": "{ifname}",
		"on-click": "wlanmenu"
	},

	"pulseaudio": {
		"format": "{icon}",
		"format-muted": "󰝟",
		"format-icons": ["󰕿", "󰖀", "󰕾"]
	},

	"temperature": {
		"format": "{temperatureC}"
	}

}
