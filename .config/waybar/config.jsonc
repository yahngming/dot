{

	"layer": "top",
	"position": "bottom",
	"reload_style_on_change": true,

	"modules-left": ["clock", "tray", "pulseaudio/slider", "mpris"],
	"modules-center": ["hyprland/workspaces"],
	"modules-right": ["temperature", "idle_inhibitor", "battery", "network", "pulseaudio", "custom/power"],

	"battery": {
		"format": "{icon}",
		"format-icons": ["󰂃", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
	},

	"clock": {
		"format": "{:%I:%M %p} ",
		"tooltip-format": "<tt>{calendar}</tt>",
		"on-scroll-up": "shift_up",
		"on-scroll-down": "shift_down",
		"calendar": {
			"format": {
				"today": "<b>{}</b>"
			}
		}
	},

	"custom/power": {
		"format" : "󰤆",
		"on-click": "powermenu",
		"on-click-right": "hyprlock",
		"tooltip-format": "Left: Power menu\nRight: Lock screen"
	},

	"hyprland/workspaces": {
		"all-outputs": true,
		"on-scroll-up": "hyprctl dispatch workspace e-1",
		"on-scroll-down": "hyprctl dispatch workspace e+1",
		"format": "{icon}",
		"format-icons": {
			"default": ""
		},
		"persistent-workspaces": {
			"*": [ 1,2,3,4,5 ]
		}
	},

	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "",
			"deactivated": ""
		}
	},

	"mpris": {
		"format": "{status_icon}  {title} - {artist}",
		"on-click": "playerctl play-pause",
		"on-scroll-up": "playerctl volume .05+",
		"on-scroll-down": "playerctl volume .05-",
		"status-icons": {
			"playing": "",
			"default": ""
		}
	},

	"network": {
		"format": "{icon}",
		"format-ethernet": "󰈀",
		"format-disconnected": "󰤮",
		"format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
		"tooltip-format": "{essid}",
		"tooltip-format-ethernet": "{ifname}",
		"on-click": "wlanmenu"
	},

	"pulseaudio": {
		"format": "{icon}",
		"format-muted": "󰝟",
		"format-icons": ["󰕿", "󰖀", "󰕾"]
	},

"pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
}

	"temperature": {
		"format": "{temperatureC}"
	},

}
